<style>
  table  tr  th, table  tr  td {
    width: 100px;
    max-width: 100px;
    flex-wrap: wrap;
    text-overflow: ellipsis;
    overflow: hidden;
    padding: 20px;
    background-color: rgb(239, 230, 230);
  }
</style>
<p style="color: green"><%= notice %></p>

<h1>Blogs</h1>
<h3>
<%= link_to "Add New Blog", new_post_path %>
</h3>
<div>
<table width="100%" border="1" >
    <tr>
        <th colspan="3" class="padding color">Title</th>
        <th colspan="5" class="padding color">description</th>
        <th colspan="1" class="padding color">Show</th>
    </tr>
    <% @posts.each do |post| %>
      <tr>
        <%= render post %>
        <td colspan="1">
          <%=  link_to "Show this post", post  %>
        </td>
      </tr>
    <% end %>
    <%= will_paginate @posts %>
</table>
</div>
