
<p id="notice"><%= notice %></p>

<h1>Users</h1>
<table border="1">
  <tr>
    <td>Username</td>
    <td>Email</td>
    <td>Show</td>
    <td>Edit</td>
    <td>Delete</td>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.password %></td>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_post_path(user) %></td>
      <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<br>
<% if current_user %>
  <%= link_to 'New Post', new_post_path %>
<% end %>